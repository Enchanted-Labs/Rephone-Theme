{% section 'breadcrumbs' %}
  <div class="breadcrumbs">
    <div class="item-parent col-12 col-lg-6">
      <ul class="item-parent">
        {% for breadcrumb in breadcrumbs %}
          <li class="item"><a href="{{ breadcrumb.href }}"><p>{{ breadcrumb.text }}</p></a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endsection %}

<div id="account-transaction" class="container">
  {% render 'breadcrumbs' %}
  <div class="row">
    {% render 'column_left' %}
    {% if column_left and column_right %}
      {% assign class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
      {% assign class = 'col-sm-9' %}
    {% else %}
      {% assign class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      <p>{{ text_total }} <b>{{ total }}</b>.</p>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-left">{{ column_date_added }}</td>
              <td class="text-left">{{ column_description }}</td>
              <td class="text-right">{{ column_amount }}</td>
            </tr>
          </thead>
          <tbody>
            {% if transactions %}
              {% for transaction in transactions %}
                <tr>
                  <td class="text-left">{{ transaction.date_added }}</td>
                  <td class="text-left">{{ transaction.description }}</td>
                  <td class="text-right">{{ transaction.amount }}</td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td class="text-center" colspan="5">{{ text_empty }}</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {{ content_bottom }}
    </div>